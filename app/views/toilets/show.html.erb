<div class="container">
  <%= link_to 'Back to the listings', toilets_path%>

  <% if @toilet.user == current_user %>
    <%= link_to 'My toilets', my_toilets_path%>

    <div class="card" style="width: 40rem ";>
      <% @toilet.bookings.each do |booking| %>
        <h3 class="card-title"><%= booking.toilet.name %></h3>
          <p> <strong>From</strong><br> <%= booking.entry_time %></p>
          <p> <strong>To</strong><br> <%= booking.exit_time %></p>
          <p> <strong>Total price (CHF/min)</strong><br> <%= booking.toilet.price %></p>
      <% end %>
    </div>

  <% else %>

  <div class="card" style="width: 40rem ";>
    <%= cl_image_tag(@toilet.photo.key, width: 400, height: 300, crop: :fill) %>
    <h5><%=@toilet.name.capitalize %></h5>
      <% if policy(@toilet).destroy? %>
        <%= link_to toilet_path(@toilet), method: :delete, data: { confirm: "Are you sure?" } do %>
          <i class="fa fa-trash destroy_dose"></i>
        <% end %>
      <% end %>

      <% if policy(@toilet).update? %>
        <%= link_to edit_toilet_path(@toilet), method: :update do %>
          <i class="fas fa-edit"></i>
        <% end %>
      <% end %>
    <ul class="list-group list-group-flush p-3">
      <p><%=@toilet.description %></p>
      <p><%=@toilet.price %>.-</p>
    </ul>
        <%= simple_form_for [@toilet, @booking] do |f| %>
          <%= f.input :entry_time %>
          <%= f.input :exit_time %>
          <%= f.button :submit, class: "btn btn-primary" %>
        <% end %>
      <% end %>
  </div>

</div>

