<div class="container">
<%= link_to 'Back to the listings', toilets_path%>
  <div class="card" style="width: 40rem ";>
    <img src="https://source.unsplash.com/xXc7zUKIhRw/800x450" alt="toilet">
    <h5><%=@toilet.name.capitalize %></h5>
    <ul class="list-group list-group-flush p-3">
    <p><%=@toilet.description %></p>
    <p><%=@toilet.price %>.-</p>
    </ul>

    <div class="container">
    <%= simple_form_for [@toilet, @booking] do |f| %>
      <%= f.input :entry_time %>
      <%= f.input :exit_time %>
    <%= f.button :submit, class: "btn btn-primary" %>
    <% end %>
    </div>
  </div>
</div>


